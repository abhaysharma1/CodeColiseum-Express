// ===== Configuration =====
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ===== User & Authentication =====
model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  role          UserRole?
  isOnboarded   Boolean   @default(false)
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  exams       Exam[]           @relation("CreatedExams")
  submissions Submission[]
  enrollments ExamEnrollment[]
  results     ExamResult[]
  sessions    Session[]
  accounts    Account[]

  // Relation for Groups
  createdGroups   Group[]          @relation("TeacherGroups")
  memberGroups    GroupMember[]
  selfSubmissions selfSubmission[]
  examAttempts    ExamAttempt[]
  aiconversations AIConversation[]

  @@index([email])
  @@map("user")
}

enum UserRole {
  TEACHER
  STUDENT
  ADMIN
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([id])
  @@map("session")
}

model Account {
  id                    String    @id @default(uuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("account")
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

// ===== Problems & Test Cases =====
model Problem {
  id          String            @id @default(uuid())
  number      Int               @unique
  title       String
  description String            @db.Text
  difficulty  problemDifficulty
  source      String            @default("Unknown")

  examProblems           ExamProblem[]
  tags                   ProblemTag[]
  testCase               TestCase? // one-to-one relation
  runTestCase            RunTestCase? // one-to-one relation
  selfSubmissions        selfSubmission[]
  submissions            Submission[]
  complexityTestingCases complexityTestingCases?
  driverCode             driverCode[]
  referenceSolutions     referenceSolution[]
  problemTestGenerators  ProblemTestGenerator?
  aiconversations        AIConversation[]

  @@index([id, number, title])
}

enum expectedComplexity {
  LOGN
  N
  NLOGN
  N2
  N3
  EXP
}

enum problemDifficulty {
  EASY
  MEDIUM
  HARD
}

model TestCase {
  id        String   @id @default(uuid())
  cases     Json // Array of {input: string, output: string}
  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String   @unique // one-to-one relationship
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([problemId])
}

model complexityTestingCases {
  id                 String              @id @default(uuid())
  cases              Json
  expectedComplexity expectedComplexity?

  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String   @unique // one-to-one relationship
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([problemId])
}

model driverCode {
  id         String  @id @default(uuid())
  languageId Int
  header     String?
  template   String?
  footer     String?

  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([languageId, problemId])
  @@index([problemId])
}

model referenceSolution {
  id         String  @id @default(uuid())
  languageId Int
  code       String
  problemId  String
  problem    Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
}

model RunTestCase {
  id        String   @id @default(uuid())
  cases     Json // Array of {input: string, output: string}
  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String   @unique // one-to-one relationship
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([problemId])
}

model selfSubmission {
  id              String           @id @default(uuid())
  code            String
  language        String
  noOfPassedCases Int
  failedCase      Json?
  createdAt       DateTime         @default(now())
  status          submissionStatus

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String

  @@index([userId])
}

enum submissionStatus {
  ACCEPTED
  BAD_SCALING
  BAD_ALGORITHM
}

model ProblemTestGenerator {
  id String @id @default(uuid())

  problemId String  @unique
  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  type    GeneratorType
  pattern GeneratorPattern

  minValue Int
  maxValue Int

  expectedComplexity expectedComplexity

  sizes Int[] // e.g. [1000, 2000, 4000, 8000]

  createdAt DateTime @default(now())

  @@index([problemId])
}

enum GeneratorType {
  ARRAY
  STRING
  MATRIX
}

enum GeneratorPattern {
  RANDOM
  SORTED
  REVERSE
  CONSTANT
}

// ===== Exams & Submissions =====
model Exam {
  id          String     @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  isPublished Boolean    @default(false)
  durationMin Int
  sebEnabled  Boolean    @default(false)
  status      ExamStatus

  creator         User             @relation("CreatedExams", fields: [creatorId], references: [id])
  creatorId       String
  problems        ExamProblem[]
  enrollments     ExamEnrollment[]
  submissions     Submission[]
  results         ExamResult[]
  startDate       DateTime
  endDate         DateTime
  examGroups      ExamGroup[]
  examAttempts    ExamAttempt[]
  aiEvaluations   AiEvaluation[]
  aiconversations AIConversation[]

  @@index([id, creatorId])
}

enum ExamStatus {
  scheduled
  active
  completed
  ai_processing
  finished
}

model ExamProblem {
  id        String  @id @default(uuid())
  order     Int
  exam      Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  examId    String
  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String

  @@index([examId])
}

model ExamEnrollment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  exam   Exam   @relation(fields: [examId], references: [id])
  examId String
  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@unique([examId, userId])
}

model Submission {
  id        String @id @default(uuid())
  attemptId String
  problemId String

  language   String
  sourceCode String

  passedTestcases Int  @default(0)
  totalTestcases  Int  @default(0)
  executionTime   Int?
  memory          Int?

  isFinal  Boolean @default(false)
  aiQueued Boolean @default(false)

  // âœ… ADD THIS
  aiStatus AiProcessingStatus @default(PENDING)
  status   SubmissionStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attempt      ExamAttempt   @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  problem      Problem       @relation(fields: [problemId], references: [id], onDelete: Cascade)
  user         User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String?
  exam         Exam?         @relation(fields: [examId], references: [id], onDelete: Cascade)
  examId       String?
  aiEvaluation AiEvaluation?

  @@index([userId, examId])
}

enum AiProcessingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum SubmissionStatus {
  PENDING // Accepted by backend, not yet sent to judge
  RUNNING // Being executed by Judge0
  ACCEPTED // All test cases passed
  PARTIAL // Some test cases passed
  WRONG_ANSWER
  TIME_LIMIT
  MEMORY_LIMIT
  RUNTIME_ERROR
  COMPILE_ERROR
  INTERNAL_ERROR // Judge failure / unexpected error
}

model ExamResult {
  id        String   @id @default(uuid())
  score     Int
  createdAt DateTime @default(now())

  exam   Exam   @relation(fields: [examId], references: [id])
  examId String
  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@index([examId, userId])
}

model ExamGroup {
  id      String @id @default(uuid())
  examId  String
  groupId String

  exam  Exam  @relation(fields: [examId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([examId, groupId])
}

model ExamAttempt {
  id        String @id @default(uuid())
  examId    String
  studentId String

  status ExamAttemptStatus @default(NOT_STARTED)

  lastHeartbeatAt DateTime // to track disconnections 
  disconnectCount Int      @default(0)

  startedAt   DateTime
  expiresAt   DateTime
  submittedAt DateTime?

  totalScore Int @default(0)

  exam    Exam @relation(fields: [examId], references: [id])
  student User @relation(fields: [studentId], references: [id])

  submissions Submission[]

  @@unique([examId, studentId])
  @@index([examId, studentId])
}

enum ExamAttemptStatus {
  NOT_STARTED
  IN_PROGRESS
  SUBMITTED
  AUTO_SUBMITTED
  TERMINATED
}

model AiEvaluation {
  id           String @id @default(uuid())
  submissionId String @unique

  timeComplexity  String?
  spaceComplexity String?
  optimal         Boolean?

  qualityScore Int?
  aiScore      Int?

  feedback String?

  createdAt DateTime @default(now())

  submission Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  exam       Exam?      @relation(fields: [examId], references: [id], onDelete: Cascade)
  examId     String?

  @@index([submissionId])
}

// ===== Student Groups =====
model Group {
  id          String        @id @default(uuid())
  name        String
  description String?
  creator     User          @relation("TeacherGroups", fields: [creatorId], references: [id])
  creatorId   String
  members     GroupMember[]
  noOfMembers Int           @default(0)
  createdAt   DateTime      @default(now())
  joinByLink  Boolean       @default(true)
  examGroups  ExamGroup[]
  type        groupType     @default(CLASS)

  aiEnabled       Boolean          @default(false)
  aiMaxMessages   Int? // per student per exam per problem
  aiMaxTokens     Int? // per student per exam per problem
  aiconversations AIConversation[]

  @@index([creatorId])
}

enum groupType {
  CLASS
  LAB
}

model GroupMember {
  id        String   @id @default(uuid())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId   String
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId String
  addedAt   DateTime @default(now())

  @@unique([groupId, studentId])
  @@index([groupId, studentId])
}

// ===== Tags System =====
model Tag {
  id       String       @id @default(uuid())
  name     String       @unique
  problems ProblemTag[]
}

model ProblemTag {
  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String

  tag   Tag    @relation(fields: [tagId], references: [id])
  tagId String

  @@id([problemId, tagId])
}

model AIConversation {
  id String @id @default(cuid())

  studentId String
  groupId   String
  examId    String
  problemId String

  messageCount Int @default(0)
  totalTokens  Int @default(0)

  isClosed Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student User    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  group   Group   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  exam    Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  messages AIMessage[]

  @@unique([studentId, examId, problemId])
}

model AIMessage {
  id String @id @default(cuid())

  conversationId String
  role           AIRole
  content        String

  tokenCount Int?
  modelUsed  String?

  createdAt DateTime @default(now())

  conversation AIConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}

enum AIRole {
  USER
  ASSISTANT
  SYSTEM
}

model AIRateLimit {
  id          String   @id @default(cuid())
  studentId   String
  problemId   String
  lastRequest DateTime

  @@unique([studentId, problemId])
}
